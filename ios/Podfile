# Podfile â€” ConfiguraciÃ³n para Flutter + Firebase + iOS 15+
platform :ios, '15.0'

use_frameworks!
use_modular_headers!

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Ruta correcta para proyectos Flutter recientes (usa flutter_ios_podfile_setup)
flutter_root = ENV['FLUTTER_ROOT']
unless flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('Flutter', 'Generated.xcconfig'), __dir__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Ejecuta 'flutter build ios' o 'flutter pub get' para regenerarlo."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    flutter_root = matches[1].strip if matches
  end
end

raise 'No fue posible determinar FLUTTER_ROOT.' unless flutter_root
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # ðŸ”§ Forzamos compatibilidad con iOS 15+
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end
